<ol reversed class="postlist">
{% for show in showslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ show.url | url }}" class="postlist-link"><h2>{% if show.data.title %}{{ show.data.title }}{% else %}<code>{{ show.url }}</code>{% endif %}</h2></a>
    <time class="postlist-date" datetime="{{ show.date | dateToFormat('yyyy-MM-dd') }}">{{ show.date | dateToFormat('dd LLL yyyy') }}</time>
    {% for tag in show.data.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
    {% endfor %}
  </li>
{% endfor %}
</ol>
